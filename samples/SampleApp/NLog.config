<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <target name="logfile" 
            xsi:type="File" 
            fileName="file.txt" 
            layout="${longdate}|${level:uppercase=true}|${logger}|${event-context:item=EventId}|${ndc}${message}" />
    <target name="console" 
            xsi:type="ColoredConsole" 
            layout="[${level:uppercase=true}:${logger}] ${ndc}${message}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logfile,console" />
  </rules>
</nlog>
